<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.traveler.przemek1.Nieposortowane.Employees">
    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/barGraph"></com.github.mikephil.charting.charts.BarChart>

    <Button
        android:id="@+id/btn_wstecz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/barGraph"
        android:layout_marginTop="13dp"
        android:background="@android:drawable/ic_media_rew" />

    <Button
        android:id="@+id/btn_do_przodu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_wstecz"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/btn_wstecz"
        android:background="@android:drawable/ic_media_ff" />

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_do_przodu"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/btn_do_przodu"
        android:text="Menu" />

</RelativeLayout>

